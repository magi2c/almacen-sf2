{% extends '::almacen.html.twig' %}

{% block article %}
<h1>Caja list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Referencia</th>
            <th>Base</th>
            <th>Ancho</th>
            <th>Alto</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('almacen_caja_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.referencia }}</td>
            <td>{{ entity.base }}</td>
            <td>{{ entity.ancho }}</td>
            <td>{{ entity.alto }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('almacen_caja_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('almacen_caja_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('almacen_caja_new') }}">
            Create a new entry
        </a>
    </li>
</ul>


<form action="{{ path('almacen_caja') }}" method="post" {{ form_enctype(form_filter) }}>
    {{ form_widget(form_filter) }}
    <p>
        <button type="submit">Find</button>
    </p>
</form>



{% endblock %}
